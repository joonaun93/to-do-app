<h1 class="app__title">To do List V1</h1>
<% if (isAuthenticated){ %>
<!-- for authentication page -->
<%- include('app_contents/main_page'); %>
<!-- for authentication page -->
<% } else { %>

<!-- This is the login/sign up page -->

<form class="login__form" action="/login" method="POST">
  <h3 class="login__header">Log in</h3>
  <ul class="login__list">
    <li class="login__list-items">
      <label for="email">Email</label>
    </li>
    <li class="login__list-items">
      <input type="text" name="logInEmail" id="email" />
      <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
    </li>
    <li class="login__list-items">
      <label for="password">Password</label>
    </li>
    <li><input type="password" name="logInPassword" id="password" /></li>
  </ul>
  <button class="login__button" type="submit">Log in</button>
</form>

<div class="line_break"></div>

<form class="login__form" action="/signup" method="POST">
  <h3 class="login__header">Sign up</h3>
  <ul class="login__list">
    <li class="login__list-items">
      <label for="signUpName">Name</label>
    </li>
    <li class="login__list-items">
      <input type="text" name="signUpName" id="signUpName" />
      <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
    </li>
    <li class="login__list-items">
      <label for="signUpEmail">Email</label>
    </li>
    <li class="login__list-items">
      <input type="text" name="signUpEmail" id="signUpEmail" />
    </li>
    <li class="login__list-items">
      <label for="signUpPassword">Password</label>
    </li>
    <li><input type="password" name="signUpPassword" id="signUpPassword" /></li>
  </ul>
  <button class="login__button" type="submit">Sign up</button>
</form>

<% } %>
